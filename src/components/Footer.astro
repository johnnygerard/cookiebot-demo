---
const COPYRIGHT_YEAR = 2026;
const currentYear = new Date().getFullYear(); // Computed at build time
const yearOrRange =
  COPYRIGHT_YEAR < currentYear
    ? `${COPYRIGHT_YEAR}–${currentYear}`
    : `${COPYRIGHT_YEAR}`;
---

<footer class="border-t border-white/10 bg-onyx/90">
  <div
    class="mx-auto flex w-full max-w-6xl flex-col gap-4 px-6 py-8 text-sm text-lavender-mist/70 md:flex-row md:items-center md:justify-between"
  >
    <p>© {yearOrRange} VantaShield. All rights reserved.</p>
    <a class="transition hover:text-lavender-mist" href="/cookie-declaration">
      Cookie declaration
    </a>
  </div>
</footer>
