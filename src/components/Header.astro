---
import { Picture } from "astro:assets";
import Logomark from "~/assets/images/logomark.png";
---

<header class="border-b border-white/10">
  <div
    class="mx-auto flex w-full max-w-6xl items-center justify-between gap-6 px-6 py-6"
  >
    <a class="flex items-center gap-4" href="/" rel="home">
      <Picture
        alt="VantaShield logomark"
        class="size-11 rounded-full object-cover"
        densities={[1, 2, 3]}
        fallbackFormat="webp"
        formats={["avif"]}
        priority
        src={Logomark}
        width={Logomark.width / 8}
      />
      <div>
        <p class="font-display text-lg leading-none">VantaShield</p>
        <p
          class="mt-1 text-[0.68rem] tracking-[0.08em] text-lavender-mist/80 uppercase"
        >
          Cybersecurity firm
        </p>
      </div>
    </a>
    <nav
      class="hidden items-center gap-6 text-sm text-lavender-mist/70 md:flex"
    >
      <a class="transition hover:text-lavender-mist" href="/#services"
        >Services</a
      >
      <a class="transition hover:text-lavender-mist" href="/#approach"
        >Approach</a
      >
      <a class="transition hover:text-lavender-mist" href="/#contact">Contact</a
      >
    </nav>
    <a
      class="rounded-full border border-lime-moss/60 px-4 py-2 text-sm font-medium text-lime-moss transition hover:border-lime-moss hover:bg-lime-moss/10"
      href="/#contact"
    >
      Request briefing
    </a>
  </div>
</header>
