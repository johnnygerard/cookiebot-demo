---
import GtmNoScript from "~/components/GtmNoScript.astro";
import GtmScript from "~/components/GtmScript.astro";
import "~/styles/globals.css";
---

<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    <GtmScript />
    <link
      rel="icon"
      href="/assets/images/favicon-light.png"
      media="(prefers-color-scheme: light)"
      type="image/png"
      sizes="32x32"
    />
    <link
      rel="icon"
      href="/assets/images/favicon-dark.png"
      media="(prefers-color-scheme: dark)"
      type="image/png"
      sizes="32x32"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VantaShield</title>
    <meta
      name="description"
      content="VantaShield is a cybersecurity firm providing managed defense, incident readiness, and cloud assurance."
    />
  </head>
  <body>
    <GtmNoScript />
    <slot />
  </body>
</html>
